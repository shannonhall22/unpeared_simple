<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Cart Item #<%= @cart_item.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>User</dt>
              <dd><%= @cart_item.user_id %></dd>

              <dt>Cart</dt>
              <dd><%= @cart_item.cart_id %></dd>

              <dt>Item</dt>
              <dd><%= @cart_item.item_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), cart_items_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_cart_item_path(@cart_item), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @cart_item, method: :delete, data: { confirm: "Do you really want to delete this cart_item?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
