<%= simple_form_for(@cart_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :cart_id, value: current_user.id %>
    <%= f.input :item_id  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
