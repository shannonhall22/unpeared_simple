<div class="container">
  <div class="row">
    <div class="page-header">
      <h1>
        Found Items
        <% if user_signed_in? %>
          <%= link_to icon('plus'), new_found_item_path, class: "btn btn-lg btn-success" %>
        <% end %>
      </h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 search">
      <h3>REFINE BY</h3>
      <hr>
      <p><strong>Category</strong></p>
        <ul>
          <li>Jewelery</li>
          <li>Footwear</li>
          <li>Gloves</li>
          <li>Other</li>
        </ul>
      <hr>
      <p><strong>Location</strong></p>
    </div>
    <div class="col-md-9">
      <div class="row isotope-container">
      <% @found_items.each do |found_item| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 isotope-item">
          <div class="panel panel-default item-border">
            <div class="panel-heading">
              <h3 class="panel-title"><%= found_item.name.truncate(30) %></h3>
            </div>
            <div class="panel-body">
              <dl>
                <div class="boxed-image">
                  <dd><%= image_tag (found_item.image1), class: "image-index img-responsive" %></dd>
                </div>
              </dl>
              <div class="btn-group btn-group-justified">
                <%= link_to icon('search-plus'), found_item, class: "btn btn-primary bottom-button" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>



<!-- Responsive, Isotope-based layout example -->



<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container');

    $container.imagesLoaded(function() {
      $container.isotope({
        itemSelector: '.isotope-item',
        layoutMode: 'masonry',
        filter: function() {
          return qsRegex ? $(this).text().match( qsRegex ) : true;
        }
      })
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
