<%= simple_form_for(@found_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :label => 'Title of Post' %>
    <%= f.input :desc, :label => 'Description' %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :location, :label => 'Location Found (ZIP)' %>
      </div>
      <div class="col-md-6">
        <%= f.input :category, :collection => ['Jewelery', 'Footwear', 'Gloves', 'Other'] %>
      </div>
    </div>

    <hr>

    <%= f.input :image1, :label => 'Upload Images (Must upload at least one)' %>
    <%= f.input :image2, label: false %>
    <%= f.input :image3, label: false %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <hr>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Cancel', :back, class: 'btn btn-default'  %>
  </div>
<% end %>
