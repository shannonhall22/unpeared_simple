<%= simple_form_for(@found_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :label => 'Title of Post' %>
    <%= f.input :desc, :label => 'Description' %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :location, :label => 'Location Found (ZIP)' %>
      </div>
      <div class="col-md-6">
        <%= f.association :category, collection: Category.all, label_method: :name, value_method: :id %>
      </div>
    </div>

    <hr>

    <h5>Optional Inputs:</h5>
    <div class="row">
      <div class="col-md-6">
        <%= f.association :side, collection: Side.all, label_method: :name, value_method: :id %>
      </div>
      <div class="col-md-6">
        <%= f.association :size, collection: Size.all, label_method: :name, value_method: :id %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.association :gender, collection: Gender.all, label_method: :name, value_method: :id %>
      </div>
      <div class="col-md-6">
        <%= f.association :age, collection: Age.all, label_method: :name, value_method: :id %>
      </div>
    </div>

    <hr>

    <h5><strong>Upload Images <small>*At least one required</small></strong></h5>
    <%= f.input :image1, label: false %>
    <%= f.input :image2, label: false %>
    <%= f.input :image3, label: false %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <hr>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Cancel', :back, class: 'btn btn-default'  %>
  </div>
<% end %>
