<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Found Item #<%= @found_item.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @found_item.name %></dd>

              <dt>Desc</dt>
              <dd><%= @found_item.desc %></dd>

              <dt>Category</dt>
              <dd><%= @found_item.category %></dd>

              <dt>Image1</dt>
              <dd><%= @found_item.image1 %></dd>

              <dt>Image2</dt>
              <dd><%= @found_item.image2 %></dd>

              <dt>Image3</dt>
              <dd><%= @found_item.image3 %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), found_items_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_found_item_path(@found_item), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @found_item, method: :delete, data: { confirm: "Do you really want to delete this found_item?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
