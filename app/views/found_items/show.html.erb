<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-1 col-md-10">
    <div class="panel">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-6">
            <h3 class="panel-title"><%= @found_item.name.upcase %></h3>
          </div>
          <div class="col-md-6">
            <div class="pull-right">
              <% if current_user.id == @found_item.user_id %>
                <%= link_to 'Edit', edit_found_item_path(@found_item) %>
                |
                <%= link_to 'Delete', @found_item, method: :delete, data: { confirm: "Do you really want to delete this found_item?" } %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="panel-body">
        <div class="row">
          <div class="col-md-6">
            <div class="row">
              <div class="col-md-12">
                <%= image_tag @found_item.image1, class: "img-responsive" %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <% if @found_item.image2.present? %>
                  <%= image_tag @found_item.image2, class: "img-responsive small-image" %>
                <% end %>
                <% if @found_item.image3.present? %>
                  <%= image_tag @found_item.image3, class: "img-responsive small-image" %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <dl class="dl-horizontal">
              <p><%= @found_item.desc %></p>

              <hr>

              <dt>Category</dt>
              <dd><%= @found_item.category.name %></dd>

              <dt>Location Found</dt>
              <dd><%= @found_item.location %></dd>
            </dl>

            <% unless user_signed_in? %>
              <%= link_to 'Message Finder', '#', class: 'btn btn-primary btn-block' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
